<div class="main-container home-container col-md-8 col-md-offset-2">

  <div style="margin-left: 12px !important;">
    <h1>Articles</h1>
  </div>

  <div>
    <% @articles.each do |article| %>
      <% if article.user == current_user %>
        <p>
          <%= link_to article.title, article_path(article) %> - <%= article.date %>
        </p>
      <% end %>
    <% end %>
  </div>

  <h3>Enter article URL: </h3>
  <div class="form-home">
    <%= form_for Article.new do |f| %>
      <%= f.text_field :url, style: 'width: 350px;', autocomplete: :off %>
      <%= f.submit 'Clean up', class: 'button button-blue-home' %>
    <% end %>
  </div>

  <h3>Supported sites:</h3>
  <div>
    <p><%= link_to 'BBC News', 'https://www.bbc.com/news' %></p>
    <p>France24, <%= link_to 'FR', 'https://www.france24.com/fr/' %> | <%= link_to 'EN', 'https://www.france24.com/en/' %></p>
    <p><%= link_to 'Reuters', 'https://www.reuters.com/' %></p>
    <!-- Paywall problems, naturally -->
    <!-- <p><%#= link_to 'WashingtonPost', 'https://www.washingtonpost.com/' %></p> -->
  </div>

</div>
