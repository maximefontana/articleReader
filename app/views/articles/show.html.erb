<div class="main-container">
  <div>
    <h2><%= link_to @article.url, @article.url %></h2>
  </div>
  <div>
    <h1><%= @article.title %></h1>
    <p><%= @article.date %></p>
  </div>
  <div>
    <p><%= simple_format(simple_format(@article.content)) %></p>
  </div>
  <div class="back-button">
    <%= link_to 'Back', articles_path, class: 'button button-blue' %>
  </div>
</div>
